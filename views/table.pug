extends layout

block content
  h1= title
  - results = [{NumberOfLegs: 4, color: 'black', price: '60$'}, {NumberOfLegs: 2, color: 'white', price: '30$'},{NumberOfLegs: 3, color: 'brown', price: '50$'} ]
  div(class="container-fluid")
      each item in results
        div(class="row")
          div(class="col-sm-2")   #{item.NumberOfLegs}
          div(class="col-sm-2")   #{item.color}
          div(class="col-sm-2")   #{item.price}
  